    <link rel="stylesheet" href="/styles/new.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
</head>
<body>

    <div class="head">
        <h1 class="Website-title">Skar Book Reviews</h1>
    </div>

    <div class="create-text">
        <p><%= text %> here ðŸ‘‡ </p>
    </div>

    <div class="contain">
        <form action="/create" method="POST">
            <input name="id" id="id" hidden>
            <input name="text" id="text" value="<%= text %>" hidden>
            <label name="isbn" class="isbn-text">Enter the isbn number: </label>
            <input name="isbn" id="isbn" type="text" class="isbn-box" size="30" <% if(text == "Edit") { %> disabled <% } %> value="<%= table ? table.isbn : '' %>">

            <label name="rating" class="rating-text">Enter your rating: </label>
            <input name="rating" id="rating" type="number" class="rating-box" min="1" max="10" size="30" value="<%= table ? table.ratings : '' %>">

            <label name="notes" class="notes-text">Enter your Notes: </label>
            <textarea name="notes" id="notes" class="notes-box" rows="10" cols="50"><%= table ? table.review : '' %></textarea>

            <div class="create">
                <button type="submit" class="btn btn-primary">
                    <img src="/images/create-btn.png">
                    <%= text %>
                </button>
            </div>
              
        </form>
        
    </div>

    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
